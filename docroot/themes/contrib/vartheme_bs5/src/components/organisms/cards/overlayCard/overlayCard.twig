{# Attach component css and js for LTR #}
{% if lang_dir == "ltr" %}
  {{ attach_library('vartheme_bs5/overlay-card-ltr') }}
{% else %}
  {{ attach_library('vartheme_bs5/overlay-card-rtl') }}
{% endif %}

{% set classes = [
  'card',
  'varbase-overlay-card',
  'text-white',
  card_classes
]|merge(utility_classes ?? []) %}

{% set content_classes = [
  'card-img-overlay',
  'd-flex',
  'flex-column',
  'justify-content-' ~ vertical_alignment,
  'align-items-' ~ horizontal_alignment,
  'text-' ~ horizontal_alignment,
   card_body_classes
] %}

<div {{ attributes.addClass(classes) }}>
  {{ image }}
  <div {{ content_attributes.addClass(content_classes) }}>
    {{ content }}
  </div>
</div>
